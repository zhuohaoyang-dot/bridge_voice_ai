# Server Configuration
PORT=3010
WS_PORT=8010
NODE_ENV=development

# Vapi Configuration
VAPI_API_KEY=your_vapi_api_key_here
VAPI_FRONTEND_KEY=your_vapi_frontend_key_here
VAPI_ASSISTANT_ID=your_assistant_id_here
VAPI_PHONE_NUMBER_ID=your_phone_number_id_here
VAPI_PHONE_NUMBER=+1234567890

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_REQUIRED=false
REDIS_CLEAN_ON_START=false

# Security
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Campaign Settings
MAX_CONCURRENT_CAMPAIGNS=1
MAX_CALLS_PER_CAMPAIGN=1000
DEFAULT_CALL_DELAY_SECONDS=5
DEFAULT_MAX_CONCURRENT_CALLS=3

# Development Settings
DISABLE_WEBHOOK_VALIDATION=false


# CRM API Configuration
CRM_API_TOKEN=you_crm_api_toekn_here


# Audio Configuration
AUDIO_WS_PORT=8011
ENABLE_AUDIO_PROXY=true
MAX_AUDIO_CONNECTIONS=50


# Convoso Endpoints
CONVOSO_API_TOKEN=the_crm_token_here
CONVOSO_API_URL=https://api.convoso.com/v1
